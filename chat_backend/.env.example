# Django Backend Environment Variables (Production)

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database (if using PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Settings (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://www.your-domain.com

# Security Settings (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# AI API Keys (if needed by backend)
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here
